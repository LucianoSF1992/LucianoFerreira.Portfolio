@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<section class="hero d-flex align-items-center text-center text-white">
    <div class="container">
        <h1 class="display-3 fw-bold">Luciano Silva Ferreira</h1>
        <span class="d-block fs-4 fw-normal mt-2 text-light">
            Desenvolvedor Full Stack com experiência em .NET e tecnologias modernas de desenvolvimento web.
        </span>

        <p class="mt-4">
            Construindo sistemas completos — do backend estruturado ao frontend responsivo —
            com foco em performance, escalabilidade e boas práticas.
        </p>

        <div class="mt-4">
            <a class="btn btn-light btn-lg me-3 px-4" asp-page="/Projetos">
                Ver Projetos
            </a>

            <a class="btn btn-outline-light btn-lg me-2 px-4" href="https://github.com/LucianoSF1992" target="_blank">
                GitHub
            </a>

            <a class="btn btn-outline-light btn-lg px-4" href="https://www.linkedin.com/in/lucianoferreira92/"
                   target="_blank">
                LinkedIn
            </a>
        </div>
    </div>
</section>

<section class="stack py-5">
    <div class="container text-center">
        <h2 class="fw-bold mb-4">Stack Técnica</h2>

        <div class="row">

            <div class="col-md-3 col-6 mb-4">
                <div class="tech-card p-3 shadow-sm">
                    <h5>C#</h5>
                    <p class="small text-muted">Programação orientada a objetos</p>
                </div>
            </div>

            <div class="col-md-3 col-6 mb-4">
                <div class="tech-card p-3 shadow-sm">
                    <h5>ASP.NET Core</h5>
                    <p class="small text-muted">Aplicações web e APIs REST</p>
                </div>
            </div>

            <div class="col-md-3 col-6 mb-4">
                <div class="tech-card p-3 shadow-sm">
                    <h5>Entity Framework</h5>
                    <p class="small text-muted">ORM e acesso a dados</p>
                </div>
            </div>

            <div class="col-md-3 col-6 mb-4">
                <div class="tech-card p-3 shadow-sm">
                    <h5>SQL Server</h5>
                    <p class="small text-muted">Modelagem e consultas</p>
                </div>
            </div>

            <div class="col-md-3 col-6 mb-4">
                <div class="tech-card p-3 shadow-sm">
                    <h5>HTML5</h5>
                    <p class="small text-muted">Estruturação semântica</p>
                </div>
            </div>

            <div class="col-md-3 col-6 mb-4">
                <div class="tech-card p-3 shadow-sm">
                    <h5>CSS3</h5>
                    <p class="small text-muted">Layouts responsivos</p>
                </div>
            </div>

            <div class="col-md-3 col-6 mb-4">
                <div class="tech-card p-3 shadow-sm">
                    <h5>Bootstrap</h5>
                    <p class="small text-muted">UI moderna e responsiva</p>
                </div>
            </div>

            <div class="col-md-3 col-6 mb-4">
                <div class="tech-card p-3 shadow-sm">
                    <h5>JavaScript</h5>
                    <p class="small text-muted">Interatividade e dinamismo</p>
                </div>
            </div>

        </div>
    </div>
</section>