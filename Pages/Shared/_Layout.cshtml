<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Luciano Ferreira</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- CSS -->
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>

    <nav id="mainNavbar" class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" asp-page="/Index">Luciano Ferreira</a>

            <div>
                <a class="nav-link d-inline text-white" asp-page="/Index">Home</a>
                <a class="nav-link d-inline text-white" asp-page="/Sobre">Sobre</a>
                <a class="nav-link d-inline text-white" asp-page="/Projetos">Projetos</a>
                <a class="nav-link d-inline text-white" asp-page="/Contato">Contato</a>
            </div>
        </div>
    </nav>

    <div>
        @RenderBody()
    </div>

    <footer class="text-center text-muted py-4">
        © @DateTime.Now.Year - Luciano Ferreira | Desenvolvedor Full Stack
    </footer>

    <script src="~/js/site.js"></script>

    <partial name="_ValidationScriptsPartial" />

</body>

</html>