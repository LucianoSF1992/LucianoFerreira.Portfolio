@page
@model ContatoModel
@{
    ViewData["Title"] = "Contato";
}

<section class="contact-hero text-white text-center d-flex align-items-center">
    <div class="container">
        <h1 class="display-4 fw-bold">Contato</h1>
        <p class="lead mt-3">
            Vamos conversar sobre oportunidades e projetos.
        </p>
    </div>
</section>

<section class="py-5">
    <div class="container">

        @if (!string.IsNullOrEmpty(Model.MensagemSucesso))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @Model.MensagemSucesso
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div asp-validation-summary="All" class="text-danger"></div>

        <form method="post" class="contact-card p-4">

            <div class="mb-3">
                <label asp-for="Contato.Nome" class="form-label"></label>
                <input asp-for="Contato.Nome" class="form-control" />
                <span asp-validation-for="Contato.Nome" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Contato.Email" class="form-label"></label>
                <input asp-for="Contato.Email" class="form-control" />
                <span asp-validation-for="Contato.Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Contato.Mensagem" class="form-label"></label>
                <textarea asp-for="Contato.Mensagem" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Contato.Mensagem" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-dark">
                Enviar Mensagem
            </button>

        </form>

    </div>
</section>