@page
@model ContatoModel
@{
    ViewData["Title"] = "Contato";
}

<section class="contact-hero text-white text-center d-flex align-items-center">
    <div class="container">
        <h1 class="section-title fw-bold">Contato</h1>
        <p class="lead mt-3">
            Vamos conversar sobre oportunidades e projetos.
        </p>
    </div>
</section>

<section class="py-5">
    <div class="container">

        @if (!string.IsNullOrEmpty(Model.MensagemSucesso))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @Model.MensagemSucesso
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div asp-validation-summary="All" class="text-danger"></div>

        <form id="contactForm" method="POST" action="https://formspree.io/f/xlgwvwpj"
              class="contact-card p-4 mx-auto contact-form">

            <div class="mb-3">
                <label class="form-label">Nome</label>
                <input name="name" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Email</label>
                <input name="email" type="email" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Mensagem</label>
                <textarea name="message" class="form-control" rows="4" required></textarea>
            </div>

            <!-- opcional: assunto do email -->
            <input type="hidden" name="_subject" value="Novo contato do portfólio" />

            <div id="formAlert" class="alert d-none mt-3" role="alert"></div>

            <button type="submit" class="btn btn-dark w-100">
                Enviar Mensagem
            </button>

        </form>

    </div>
</section>

<script>
    (function () {
        const form = document.getElementById("contactForm");
        const alertBox = document.getElementById("formAlert");
        const successUrl = "https://www.lucianoferreiradev.com/ContatoSucesso";

        function showAlert(message, type) {
            if (!alertBox) return;
            alertBox.classList.remove("d-none", "alert-success", "alert-danger");
            alertBox.classList.add(type === "success" ? "alert-success" : "alert-danger");
            alertBox.textContent = message;
        }

        form.addEventListener("submit", async function (e) {
            e.preventDefault();

            // feedback visual (opcional)
            const submitBtn = form.querySelector('button[type="submit"]');
            const oldText = submitBtn ? submitBtn.textContent : null;
            if (submitBtn) {
                submitBtn.disabled = true;
                submitBtn.textContent = "Enviando...";
            }

            try {
                const formData = new FormData(form);

                const response = await fetch(form.action, {
                    method: "POST",
                    body: formData,
                    headers: {
                        "Accept": "application/json"
                    }
                });

                if (response.ok) {
                    // redireciona para sua página personalizada
                    window.location.href = successUrl;
                    return;
                }

                // tenta ler mensagem de erro do Formspree
                let data = null;
                try { data = await response.json(); } catch { }

                const msg = (data && data.errors && data.errors[0] && data.errors[0].message)
                    ? data.errors[0].message
                    : "Não foi possível enviar sua mensagem. Tente novamente.";

                showAlert(msg, "error");
            } catch (err) {
                showAlert("Falha de conexão ao enviar. Tente novamente.", "error");
            } finally {
                if (submitBtn) {
                    submitBtn.disabled = false;
                    submitBtn.textContent = oldText || "Enviar Mensagem";
                }
            }
        });
    })();
</script>